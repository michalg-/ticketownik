#project{'project-id': project.id}
  .row
    .col.s4
      .card.blue-grey.darken-1
        .card-content.white-text
          %span.card-title {{ project.name }}
          %p
            {{ project.description }}


= render 'projects/tickets/ticket_row'
.row
  #done-tickets
    = render 'projects/tickets/show', tickets: 'ticketsStatusDone', label: 'Done'

  #current-tickets
    = render 'projects/tickets/show', tickets: 'ticketsStatusWaiting', label: 'Current'

  #waiting-tickets
    = render 'projects/tickets/show', tickets: 'ticketsStatusIcebox', label: 'Waiting'

.fixed-action-btn.horizontal#add-ticket
  %a.btn-floating.btn-large.red
    %i.large.material-icons add
  %ul
    %li
      %a.btn-floating.red{'@click': 'showNewForm'}
        %i.material-icons track_changes
